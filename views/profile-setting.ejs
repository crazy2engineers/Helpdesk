 <!-- =-=-=-=-=-=-= User Form Settings =-=-=-=-=-=-= -->
    <section class="section-padding-80" id="login">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-md-4">

            <div class="box-panel">

              <form method="POST" action="/profile_edit"  encType="multipart/form-data" >
                <div class="form-group">
                  <label>Upload Image</label>
                  <div class="input-group">
                    <span class="input-group-btn">
                <span class="btn btn-default btn-file">
                    Browse… <input type="file" name="User_profile" value="<%= user_array.User_profile %>" id="imgInp">
                </span>
                    </span>
                    <input type="text" name="User_profile" value="<%= user_array.User_profile %>" class="form-control" readonly>
                  </div>
                  <img id="img-upload" src="/profile/<%= user_array.User_profile %>" alt="" />
                </div>

                <button class="btn btn-primary btn-lg" type="submit">Change Image</button>

              </form>

            </div>
          </div>

          <div class="col-md-8">

            <div class="box-panel">

              <!-- form login -->
              <form method="POST" action="/profile-setting">
                <div class="form-group">
                  <label>User Name</label>
                  <input type="text" placeholder="John Doe" name="User_fname" value="<%= user_array.User_fname %> " class="form-control">
                </div>
                <div class="form-group">
                  <label>Email</label>
                  <input type="email" placeholder="Your Email" name="User_email" value="<%= user_array.User_email %> " class="form-control">
                </div>
                <div class="form-group">
                  <label>Password</label>
                  <input type="password" placeholder="Your Password" name="User_passowrd"  value="<%= user_array.User_password %> "  class="form-control">
                </div>
                <div class="form-group">
                  <label>Confirm Password</label>
                  <input type="password" placeholder="Your Password" name="User_passord"  value="<%= user_array.User_password %> "  class="form-control">
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-xs-12">
                      <div class="checkbox flat-checkbox">
                        <label>
                          <input type="checkbox">
                          <span class="fa fa-check"></span> Make My Profile Private?
                        </label>
                      </div>
                    </div>

                  </div>
                </div>

                <button class="btn btn-primary btn-lg" type="submit">Update My Profile</button>

              </form>
              <!-- form login -->

            </div>
          </div>

          <div class="clearfix"></div>
        </div>
      </div>
      <!-- end container -->
    </section>
